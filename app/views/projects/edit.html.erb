<%= stylesheet_link_tag "projects" %>

<body>
    <div id="page-container">
        <div id="title">
            <p style="font-size: 280%; color: #ffffff; margin: 0px; text-align: center; line-height: 128px;">Edit Project</p>
        </div>

        <%= bootstrap_form_with(model: @project, url: project_path(@project), method: :patch, local: true) do |form| %>
            <% if @project.errors.any? %>
            <div class="error">
                <% @project.errors.full_messages.each do |message| %>
                  <%= message %></br>
                <% end %>
            </div>
            <% end %>
            
            <div style="width: 800px; margin: 0 auto">
                <%= form.text_field :title, control_class: "input", label_class: "input-label" %>
                <%= form.text_area :body, control_class: "input", label_class: "input-label", style: "min-height: 128px; height: 256px; margin: 0px; overflow-y: scroll;" %>
                <%= form.text_field :description, control_class: "input", label_class: "input-label" %>
                <%= form.text_field :status, control_class: "input", label_class: "input-label"%>
                <%= form.text_field :github_link, control_class: "input", label_class: "input-label", label: "GitHub Link"  %>
                <%= form.text_field :external_link, control_class: "input", label_class: "input-label", label: "External Link" %>
                <div id="sub">
                <%= link_to projects_path, :class => "btn-gradient", :style => "margin-left: 0px;" do %>
                    <span style="transform: skew(-20deg);">Back</span>
                <% end %>
                <button name="button" type="submit" class="btn-gradient" style="margin-right: 0px; outline: none;"><span style="transform: skew(-20deg);">Update Project</span></button>
            </div>
        <% end %>
    </div>
</body>